@model EasyTalkWeb.Models.ViewModels.ProposalRequest
@{
}
<div>
    <p>@Model.JobPostId</p>
    <p>
       
        @foreach (var prop in Model.JobPost.Proposals)
        {
            <p>@prop.Title</p>
        }
    </p>
</div>
<form method="post">
    @if (Model != null)
    {
        <input type="hidden" asp-for="JobPostId" />
        <div class="mb-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" id="heading" asp-for="Title" />
        </div>
        <div class="mb-3">
            <label class="form-label">Description</label>
            <textarea class="form-control" id="content" asp-for="Text"></textarea>
        </div>
      
        <div class="mb-3">
            <button type="submit" asp-route-id="@Model.JobPostId" asp-controller="FindJob" asp-action="SaveProposal" class="btn btn-dark">
                Save
            </button>
        </div>

    }
</form>