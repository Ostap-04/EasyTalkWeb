@model EasyTalkWeb.Models.ViewModels.EditProposalRequest
<link rel="stylesheet" href="~/css/proposal.css" />

<div class="container-proposals">
    <div class="proposal-form">
        @if (Model != null)
        {
            <form method="post">
                <input type="hidden" asp-for="Id" />
                <div class="mb-3">
                    <label class="form-label">Title</label>
                    <input type="text" class="form-control" id="heading" asp-for="Title" />
                </div>


                <div class="mb-3">
                    <label class="form-label">Text</label>
                    <textarea class="form-control" id="content" asp-for="Text"></textarea>
                </div>
                @if (Model != null)
                {

                }
                <div class="buttons-edit">
                    <button type="submit" class="button-proposal">Update</button>

                    <button type="submit"
                            class="button-proposal"
                            style="background-color:lightcoral; color: #eaeaea;"
                            asp-controller="Proposal"
                            asp-action="Delete">
                        Delete
                    </button>
                </div>

            </form>
        }

        else
        {
            <p>No proposals found!</p>

        }
    </div>


</div>